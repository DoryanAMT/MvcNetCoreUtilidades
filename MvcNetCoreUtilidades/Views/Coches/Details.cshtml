@model Coche

@{
    ViewData["Title"] = "Details";
}

<h1 style="color:blue">Coche Details</h1>

<div>
    <h4>Coche</h4>
    <hr />
    @if (Model == null)
    {
        <h2 style="color:red">
            No existe el Coche buscado
        </h2>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">
                ID COCHE
            </dt>
            <dd class="col-sm-10">
                @Model.IdCoche
            </dd>
            <dt class="col-sm-2">
                MARCA
            </dt>
            <dd class="col-sm-10">
                @Model.Marca
            </dd>
            <dt class="col-sm-2">
                MODELO
            </dt>
            <dd class="col-sm-10">
                @Model.Modelo
            </dd>
            <dt class="col-sm-2">
                IMAGEN
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.Imagen" style="width: 250px; height:200px" />
            </dd>
        </dl>
    }

</div>
